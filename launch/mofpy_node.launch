<?xml version="1.0"?>
<launch>
  <arg name="joy_dev" default="/dev/input/js0" />
  <!-- Choose from: ps4_wired, ps4_wireless -->
  <arg name="config_type" default="ps4_wired" />

  <node pkg="mofpy" type="mofpy_node.py" name="mofpy" output="screen" >
    <rosparam command="load" file="$(find mofpy)/config/$(arg config_type).yaml" />
  </node>

  <node pkg="joy" type="joy_node" name="joy" >
    <param name="dev" value="$(arg joy_dev)" />
    <param name="deadzone" value="0" />
  </node>
</launch>
